extends base

block content


  h1=('PageSpeed f√ºr www.stern.de (mobil, mit und ohne GujAd)')
  table.table.table-striped.table-hover
    thead
      tr: th Score
          th Datum
    tbody
      each site in sites
        tr(class=site.score < 50 ? "slow" : "")
            td
               span= ('üíª ' + site.score)
                   em(title=('PageSpeed f√ºr '+ site.related.desktopfalse.url))=site.related.desktopfalse.score
               span.mobile= ('üì± ' + site.related.mobiletrue.score)
                   em(title=('PageSpeed f√ºr '+ site.related.mobilefalse.url))=site.related.mobilefalse.score
            td(title=moment(site.date).locale('de').format('LLLL')) #{moment(site.date).locale('de').fromNow()}

  if !sites.length
    p No entries found.